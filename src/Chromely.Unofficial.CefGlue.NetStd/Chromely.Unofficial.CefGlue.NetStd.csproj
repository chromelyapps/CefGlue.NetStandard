    <Platforms>AnyCPU</Platforms>
    <RootNamespace>Xilium.CefGlue</RootNamespace>
    <Copyright>Copyright © 2017-2021 Chromely Projects</Copyright>
    <PackageProjectUrl>https://github.com/chromelyapps/CefGlue.NetStandard</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/chromelyapps/CefGlue.NetStandard/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageIconUrl>https://github.com/chromelyapps/Chromely/blob/master/nugets/chromely.ico?raw=true</PackageIconUrl>
